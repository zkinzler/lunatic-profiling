// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts     Account[]
  sessions     Session[]
  quizSessions QuizSession[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model QuizSession {
  id           String   @id @default(cuid())
  publicId     String   @unique @default(cuid())
  userId       String?
  email        String?
  answers      Json?    // Record<questionId, answerId[]>
  currentPhase Int      @default(1) // Track which phase user is in (1, 2, or 3)
  completed    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  result Result?

  @@index([publicId])
  @@index([email])
}

model Result {
  id        String @id @default(cuid())
  sessionId String @unique

  // Primary archetype
  primaryArchetypeCode       String  // VN, CTD, YO, SO, DL, MM, TMZ, CS, BN
  primaryArchetypeName       String  // Full name
  primaryArchetypePubLegend  String  // Pub legend name
  primaryArchetypeScore      Float
  primaryArchetypePercentage Float

  // Secondary archetype
  secondaryArchetypeCode       String?
  secondaryArchetypeName       String?
  secondaryArchetypePubLegend  String?
  secondaryArchetypeScore      Float?
  secondaryArchetypePercentage Float?

  // Hybrid profile
  isHybrid             Boolean @default(false)
  hybridName           String?
  hybridDescription    String?
  hybridPercentageDiff Float?

  // All archetype scores as JSON
  allArchetypeScores      Json // Record<ArchetypeCode, number>
  allArchetypePercentages Json // Record<ArchetypeCode, number>

  // Trait scores (stored individually for easy querying)
  traitBST Float @default(0) // Bullshit Tolerance
  traitCPR Float @default(0) // Chaos Precision
  traitAE  Float @default(0) // Apology Efficiency
  traitBS  Float @default(0) // British Stoicism

  // Trait percentages
  traitBSTPercentage Float @default(0)
  traitCPRPercentage Float @default(0)
  traitAEPercentage  Float @default(0)
  traitBSPercentage  Float @default(0)

  // Theme scores for specialization
  themeScores    Json?   // Record<string, number>
  specialization String? // Dominant theme name

  // Blueprint narrative sections
  coreDriver       String?
  superpower       String?
  kryptonite       String?
  repressedShadow  String?
  internalConflict String?
  finalForm        String?
  signatureMove    String?
  chaosPartner     String?

  // Computed stats
  britishnessQuotient        Float?
  britishnessInterpretation  String?
  resistanceClearanceLevel   String? // Probationary Lunatic, Operative Grade II, etc.
  resistanceClearancePoints  Int     @default(0)
  chaosPattern               String? // front_loaded, escalating, ping_pong, contained, adaptive
  chaosPatternDescription    String?

  // Visual and summary
  asciiChart     String?
  summary        String?
  shareableStat  String?
  rawModelJson   Json?

  // Email tracking
  emailed   Boolean   @default(false)
  emailedAt DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  session QuizSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([primaryArchetypeCode])
}

model UsageEvent {
  id               String   @id @default(cuid())
  model            String
  provider         String
  promptTokens     Int
  completionTokens Int
  totalTokens      Int
  inputCostUsd     Float
  outputCostUsd    Float
  totalCostUsd     Float
  createdAt        DateTime @default(now())

  @@index([createdAt])
  @@index([model, provider])
}

model DailyCost {
  id               String   @id @default(cuid())
  day              DateTime @unique
  model            String
  provider         String
  calls            Int
  promptTokens     Int
  completionTokens Int
  totalTokens      Int
  inputCostUsd     Float
  outputCostUsd    Float
  totalCostUsd     Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([day])
  @@index([model, provider])
}
